{
    "level": "debug",
    "pattern": "${timestamp} ${level} ${message}",
    "appenders": [
        {
            "type": "console",
            "colorize": true
        },
        {
            "type": "file",
            "filename": "${LOG_PATH}/app.log",
            "maxBackups": "20",
            "maxSizeInMb": "25"
        }
    ]
}
