{
  "logging": {
    "level": "debug",
    "pattern": "${timestamp} ${level} ${message}",
    "appenders": [
      {
        "type": "console",
        "colorize": true
      },
      {
        "type": "file",
        "filename": "${LOG_PATH}/app.log",
        "maxBackups": "20",
        "maxSizeInMb": "25"
      }
    ]
  },
  "routes": {
    "/": {
      "GET": {
        "class": "IndexRoute",
        "template": "index"
      }
    }
  },
  "staticRoutes": {
    "govuk-frontend": "govuk-frontend",
    "assets": "govuk-frontend/assets",
    "html5shiv": "node_modules/html5shiv/dist"
  },
  "templatePaths": [
    "govuk-frontend",
    "govuk-frontend/components",
    "views"
  ]
}
